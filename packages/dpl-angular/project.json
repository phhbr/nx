{
  "name": "@designsystem/dpl-angular",
  "projectType": "library",
  "sourceRoot": "src",
  "prefix": "dpl",
  "tags": [],
  "projectNameAndRootFormat": "derived",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "dependsOn": ["@designsystem/dpl-web-components:build"],
      "options": {
        "command": "ng-packagr -p ng-package.json",
        "cwd": "{projectRoot}"
      }
    },
    "test": {
      "executor": "@nrwl/angular:karma",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "polyfills": [
          "zone.js",
          "zone.js/testing"
        ],
        "tsConfig": "{projectRoot}/tsconfig.spec.json",
        "karmaConfig": "{workspaceRoot}/karma.conf.js",
        "assets": [
          "{projectRoot}/src/favicon.ico",
          "{projectRoot}/src/assets"
        ],
        "styles": [],
        "scripts": []
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "{projectRoot}/src/**/*.ts",
          "{projectRoot}/src/**/*.html"
        ]
      }
    }
  }
}
